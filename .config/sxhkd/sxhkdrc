## Screenshot Options

# Main Monitor
Print
	~/.local/scripts/screenshot.sh --monitor1

# Second Monitor
ctrl + Print
        ~/.local/scripts/screenshot.sh --monitor2

# Active window
super + Print
	~/.local/scripts/screenshot.sh --active

# Rectangle selection
shift + Print
	~/.local/scripts/screenshot.sh --selection
	
# Clipboard History
super + h
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Terminal Emulator
super + t
	kitty

# Launcher
super + d
    rofi -show drun

# Firefox
super + b	
    env LIBVA_DRIVER_NAME=nvidia MOZ_DISABLE_RDD_SANDBOX=1 EGL_PLATFORM=x11 firefox

# Discord
super + w
	discord

# File manager
super + f
    thunar

# Lock Screen
super + shift + Escape
   i3lock-fancy-multimonitor -n -p 

# Powermenu
super + shift + e
    ~/.config/rofi/powermenu/powermenu.sh

# btm to mimic windows control panel
ctrl + shift + Escape
    kitty btm


## Hardware

XF86AudioRaiseVolume
	~/dotfiles/.local/scripts/volume.sh up

XF86AudioLowerVolume
	~/dotfiles/.local/scripts/volume.sh down

XF86AudioMute
	~/dotfiles/.local/scripts/volume.sh mute

## Window Management

# quit/restart bspwm
super + shift + r
    bspc wm -r

# Switch between floating and tiled
super + Tab
    bspc node -t {tiled,floating}

# Close or kill active app
super + {_,shift + }q
    bspc node -{c,k}

# Switch focus between monitor
alt + Tab
    bspc monitor --focus {prev,next}

# Resize windows with arrow keys
super + {Up,Down,Left,Right}
    {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

# Move windows with arrow keys
super + shift + {Up,Down,Left,Right}
    bspc node -s {north,south,west,east}

# Switch between last window type and fullscreen
super + space
    bspc node -t \~fullscreen

super + m 
    bspc desktop -l next

# Move windows to workspace or change workspaces
super + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} '{1-9,10}'

# sxhkd reload
super + Escape
    pkill -USR1 -x sxhkd
